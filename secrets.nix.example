# Fichier de secrets - À COPIER vers secrets.nix et NE PAS COMMITER
#
# Ce fichier contient les informations sensibles pour votre configuration.
#
# IMPORTANT:
# 1. Copiez ce fichier: cp secrets.nix.example secrets.nix
# 2. Éditez secrets.nix avec vos vraies valeurs
# 3. secrets.nix est dans .gitignore et ne sera JAMAIS commité
#
# Générer le hash bcrypt pour AdGuard Home:
#   nix-shell -p apacheHttpd
#   htpasswd -B -n -b admin VotreMotDePasse

{
  # Hash bcrypt du mot de passe admin AdGuard Home
  # Remplacer par votre hash généré
  adguardAdminPasswordHash = "$2y$10$REPLACE_WITH_ACTUAL_HASH";

  # Mot de passe initial pour l'utilisateur enfant (à changer au 1er login)
  # Ou null pour désactiver le compte jusqu'à définition manuelle
  childInitialPassword = "changeme";

  # Nom d'utilisateur de l'enfant
  childUsername = "enfant";

  # Nom complet de l'enfant
  childFullName = "Mon Enfant";
}
